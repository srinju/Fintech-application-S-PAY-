generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id               String @id @default(uuid())
  userId           String
  availableBalance Float  @default(0.0)
  currentBalance   Float  @default(0.0)
  officialName     String
  mask             String
  institutionId    String
  name             String
  type             String
  subtype          String
  sharableId       String
  User             User   @relation(fields: [userId], references: [id])
}

model User {
  id                String    @id @default(uuid())
  email             String    @unique
  dwollaCustomerUrl String?    @unique
  dwollaCustomerId  String?    @unique
  firstName         String
  lastName          String
  address1          String
  city              String
  postalCode        String
  dateOfBirth       String
  ssn               String
  password          String
  Account           Account[]
}
